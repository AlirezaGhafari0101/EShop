@model EShop.Application.ViewModels.Discount.AddDiscountViewModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header p-3">افزودن کد تخفیف جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form asp-action="AddDiscount" method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label> کد تخفیف</label>
                        <input type="text"  class="form-control">
                        <span class="text-danger py-2" ></span>
                    </div>
                    <div class="form-group">
                        <label>درصد تخفیف</label>
                        <input type="number"  class="form-control">
                        <span class="text-danger py-2" ></span>
                    </div>
                    <div class="form-group">
                        <label>تاریخ شروع تخفیف</label>
                        <input type="text" id="test-date-id">
                        <span class="text-danger py-2" ></span>
                    </div>
                    <div class="form-group">
                        <label>تاریخ انقضا تخفیف</label>
                        <input type="text" id="test-date-id">
                        <span class="text-danger py-2" ></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-4 col-xs-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" >
                                    <span class="text">فعال</span>
                                </label>
                            </div>
                        </div>
                        
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
       

    </form>
</div>