@model EShop.Application.ViewModels.Discount.EditDiscountViewModel
@using EShop.Application.Convertors
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header p-3">ویرایش کد تخفیف </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form asp-action="EditDiscount" method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label> کد تخفیف</label>
                        <input asp-for="DiscountCode" type="text" class="form-control">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>درصد تخفیف</label>
                        <input asp-for="DiscountPercentage" type="number" class="form-control">
                        <span asp-validation-for="DiscountPercentage" class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>تاریخ شروع تخفیف</label>
                        <input asp-for="StartDate" type="text" id="startDate" autocomplete="off" value="@FixedText.FixDateToShamsi(Model.StartDate)">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>تاریخ انقضا تخفیف</label>
                        <input asp-for="EndDate" type="text" id="endDate" autocomplete="off" value="@FixedText.FixDateToShamsi(Model.EndDate)">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-4 col-xs-4">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="IsActive" type="checkbox">
                                    <span class="text">فعال</span>
                                </label>
                            </div>
                        </div>

                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>


    </form>
</div>

@section HeaderRefrences {
    <link href="/persinaDatePicker/css/kamadatepicker.scss" rel="stylesheet" />
    <link href="/persinadatepicker/js/kamadatepicker.min.css" rel="stylesheet" />
}

@section FooterReferences {
    <script src="/persinadatepicker/js/kamadatepicker.holidays.js"></script>
    <script src="/persinadatepicker/js/kamadatepicker.js"></script>
    <script src="/persinadatepicker/js/kamadatepicker.min.js"></script>
    <script>
        kamaDatepicker('startDate', {



            // placeholder text

            placeholder: "",



            // enable 2 digits

            twodigit: true,

            // close calendar after select

            closeAfterSelect: true,



            nextButtonIcon: "بعدی",

            previousButtonIcon: "قبلی ",
            // highlight holidays

            markHolidays: true,



            // highlight user selected day

            highlightSelectedDay: true,



            // true or false

            sync: true,



            // display goto today button

            gotoToday: true,


        });
        kamaDatepicker('endDate', {



            // placeholder text

            placeholder: "",



            // enable 2 digits

            twodigit: true,

            // close calendar after select

            closeAfterSelect: true,

            // highlight holidays

            markHolidays: true,



            // highlight user selected day

            highlightSelectedDay: true,



            // true or false

            sync: true,



            // display goto today button

            gotoToday: true,


            nextButtonIcon: "بعدی",

            previousButtonIcon: "قبلی ",

        });
    </script>
}
