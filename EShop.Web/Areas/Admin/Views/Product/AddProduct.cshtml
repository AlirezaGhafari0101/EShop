

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header p-3">افزودن محصول جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات محصول
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام محصول </label>
                        <input type="text" class="form-control">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>تگ ها</label>
                        <input type="text" class="form-control">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>تعداد</label>
                        <input type="number" class="form-control">
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <label>توضیحات</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        <span class="text-danger py-2"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-select" aria-label="Default select example">
                            <option selected>دسته بندی را انتخاب کنید</option>
                            <option value="1">موبایل</option>
                            <option value="2">لپتاپ</option>

                        </select>
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر محصول
                </div>
                <!-- /.panel-heading -->
          
                    <div class="panel-body ">
                        <div class="w-50 h-50 overflow-hidden "> <img id="imgAvatar" class="img-thumbnail w-full h-full" src="/images/avatar/default.png" /></div>
                        <div class="form-group">
                            <label>انتخاب تصویر</label>
                            <input type="file">
                            <span class="text-danger py-2"></span>
                        </div>
                    </div>
          

                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>




@section FooterReferences
    {
    <partial name="_ClientSideValidationScripts" />
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#Avatar").change(function () {
            readURL(this);
        });






    </script>
}
