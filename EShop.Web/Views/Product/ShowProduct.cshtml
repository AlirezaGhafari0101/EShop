@section Scripts{
    <script>
        const oldPrice = document.getElementById("old-price")
        const priceElem = document.getElementById("addToCartPrice");
        const colors = []
        const colorChangeHandler = (price, discountPercentage) => {

            if (discountPercentage != 0) {
                console.log("discount");
                priceElem.innerHTML = ((Number(price) * Number(100 - discountPercentage)) / 100).toLocaleString();
                oldPrice.innerHTML = Number(price).toLocaleString();
            } else {
                priceElem.innerHTML = Number(price).toLocaleString();
            }

        }


        const addToOrder = (e) => {
            // data - toast="" data - toast - type="success" data - toast - color="green" data - toast - position="topRight" data - toast - icon="ri-check-fill" data - toast - title="موفق!" data - toast - message="به سبد اضافه شد!"
            event.preventDefault();
            const colorInput = Number(document.querySelector('input[name="productColor"]:checked').value)
            // var xhttp = new XMLHttpRequest();
            // xhttp.open("GET", "/add-to-order/@Model.Id/"+colorInput,true);
            // xhttp.send();
            $.ajax({
                type: "GET",
                url: `/add-to-order/@Model.Id/${colorInput}`,
                success: function (response) {
                    showToast("success", "موفق!", "به سبد خرید اضافه شد", "green", "topCenter")

                },
            })
        }


        function likeOrDislike(e, productId) {
            if (e.target.className == "ri-heart-3-line") {

                $.ajax({
                    type: "GET",
                    url: `/like/${productId}`,
                    success: function (response) {
                        if (response.isSuccess) {
                            e.target.className = "ri-heart-3-fill"
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status == 401) {
                            showToast("error", "ناموفق!", 'برای افزودن محصول به لیست علاقه مندی‌ها ابتدا <a href="/login">لاگین</a> کنید', "red", "topCenter")
                        }
                    }
                });
            } else {
                e.target.className = "ri-heart-3-line"
                $.ajax({
                    type: "GET",
                    url: `/deleteLike/${productId}`,

                    success: function (response) {
                        if (response.isSuccess) {
                            e.target.className = "ri-heart-3-line"
                        }
                    }
                });
            }
        }

        function likeComment(e, commentId, productId) {
            console.log("like")
            $.ajax({
                type: "GET",
                url: `/comment/like/${commentId}`,
                success: function (response) {
                    if (response.isSuccess) {

                        $(`#like${commentId}`).text(response.likesCount);
                        $(`#dislike${commentId}`).text(response.dislikesCount);



                    }
                },

            });
        }


        function dislikeComment(e, commentId, productId) {
            console.log("dislike")
            $.ajax({
                type: "GET",
                url: `/comment/dislike/${commentId}`,
                success: function (response) {
                    if (response.isSuccess) {

                        $(`#like${commentId}`).text(response.likesCount);
                        $(`#dislike${commentId}`).text(response.dislikesCount);
                    }

                },

            });
        }
    </script>
}