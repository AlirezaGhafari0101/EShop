                                    <div class="ui-box-content">
                                        <div class="row mx-0">

                                            <!-- start of product-card -->
                                            @{
                                                foreach (var product in Model)
                                                {
                                                    if (product.Colors.Count() != 0)
                                                    {
                                                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                                                            <div class="product-card">
                                                                <div class="product-thumbnail">
                                                                    <a href="/product/@product.Id">
                                                                        <img src="/images/ProductImages/@product.ImageName" alt="product title">
                                                                    </a>
                                                                </div>
                                                                <div class="product-card-body">
                                                                    <h2 class="product-title">
                                                                        <a href="/product/@product.Id">
                                                                            @product.Title
                                                                        </a>
                                                                    </h2>
                                                                    <div class="product-variant">
                                                                        @{
                                                                            foreach (var color in product.Colors)
                                                                            {
                                                                                <span class="color" style="background-color: @color.Hex;"></span>
                                                                            }
                                                                        }

                                                                        <span>+</span>
                                                                    </div>

                                                                    <div class="product-price fa-num">
                                                                        @{
                                                                            if (product.Discount != null && product.Discount.EndDate > DateTime.Now && DateTime.Now > product.Discount.StartDate && product.Discount.IsActive)
                                                                            {
                                                                                <div class="d-flex align-items-center">
                                                                                    <del class="price-old">@FixedText.MoenyFormatter(product.Price)</del>
                                                                                    <span class="discount ms-2">%@product.Discount.DiscountPercentage</span>
                                                                                </div>
                                                                                <span class="price-now">@FixedText.MoenyFormatter(((long)product.Price * (long)(100 - product.Discount.DiscountPercentage)) / 100)<span class="currency">تومان</span></span>
                                                                            }
                                                                            else if (ViewBag.globalDiscount.DiscountPercentage != 0 && ViewBag.globalDiscount.EndDate > DateTime.Now && DateTime.Now > ViewBag.globalDiscount.StartDate && ViewBag.globalDiscount.IsActive)
                                                                            {
                                                                                <div class="d-flex align-items-center">
                                                                                    <del class="price-old">@FixedText.MoenyFormatter(product.Price)</del>
                                                                                    <span class="discount ms-2">%@ViewBag.globalDiscount.DiscountPercentage</span>
                                                                                </div>

                                                                                <span class="price-now">@FixedText.MoenyFormatter((((long)product.Price * (long)(100 - ViewBag.globalDiscount.DiscountPercentage))) / 100)<span class="currency">تومان</span></span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="price-now">@FixedText.MoenyFormatter(product.Price)<span class="currency">تومان</span></span>

                                                                            }
                                                                        }
                                                                    </div>


                                                                </div>
