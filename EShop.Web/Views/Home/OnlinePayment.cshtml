@model EShop.Application.ViewModels.Wallet.WalletVM;
@using EShop.Application.Convertors;
@{
    ViewData["Title"] = "Yektakala|CheckOute";
}


<main class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- start of box -->
                
                @if (ViewBag.IsPay == true)
                {
                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-content">
                        <div class="row">
                            <div class="col-md-8 order-md-1 order-2">
                                <div class="fs-5 fw-bold text-success mb-3">
                                    با موفقیت پرداخت و ثبت گردید.
                                </div>
                       
                                <div class="text-success mb-3">
                                    پرداخت با موفقیت انجام شد. 
                                </div>
                                <div class="d-flex align-items-center flex-wrap">
                                    <a href="/" class="btn btn-primary me-4">صفحه اصلی</a>
                                </div>
                            </div>
                            <div class="col-md-4 order-md-2 order-1 mb-md-0 mb-4 text-center">
                                <img src="./theme-assets/images/theme/checkout-successful.png" class="img-fluid" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                }else{
                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-content">
                        <div class="row">
                            <div class="col-md-8 order-md-1 order-2">
                                <div class="fs-5 fw-bold text-danger mb-3">
                                    متاسفانه پرداخت شما ناموفق بود!
                                </div>
                            
                          
                                <div class="d-flex align-items-center flex-wrap">
                                        <a href="/userpanel/chargeFaildwallet/@Model.Id" class="btn btn-primary me-4">پرداخت مجدد</a>
                                    <a href="#" class="btn btn-link">تغییر روش پرداخت</a>
                                </div>
                            </div>
                            <div class="col-md-4 order-md-2 order-1 mb-md-0 mb-4 text-center">
                                <img src="./theme-assets/images/theme/checkout-unsuccessful.png" class="img-fluid" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                }
                <!-- end of box -->
                <!-- start of box -->
                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-content fa-num">
                        <div class="row fs-7 fw-bold">
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">ردیف</div>
                                <div class="text-dark">1</div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">درگاه پرداخت</div>
                                <div class="text-dark">درگاه زرین پال</div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">مبلغ</div>
                                <div class="text-dark">@FixedText.MoenyFormatter(Model.Amount)</div>
                            </div>

                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">شرح</div>
                                @if (Model.TypeId == 1)
                                {
                                    <div class="text-dark">شارژ کیف پول</div>
                                }
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">وضعیت</div>
                                @if (Model.IsPay == true)
                                {
                                    <div class="text-success">پرداخت موفقییت آمیز</div>
                                }else{
                                <div class="text-danger">پرداخت ناموفق</div>
                                }

                                
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                                <div class="text-muted mb-2">تاریخ</div>
                                <div class="text-dark">@FixedText.FixDateToShamsi(Model.CreateDate)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end of box -->
            </div>
        </div>
    </div>
</main>


